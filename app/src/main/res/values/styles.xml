<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/iran_sans_light</item>
    </style>

    <style name="AppThemeBlue" parent="@style/AppTheme">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue700</item>
        <item name="colorAccent">@color/blueAccent</item>
    </style>

    <style name="AppThemeOrange" parent="@style/AppTheme">
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorPrimaryDark">@color/orange700</item>
        <item name="colorAccent">@color/orangeAccent</item>
    </style>

    <style name="AppThemeRed" parent="@style/AppTheme">
        <item name="colorPrimary">@color/red500</item>
        <item name="colorPrimaryDark">@color/red700</item>
        <item name="colorAccent">@color/redAccent</item>
    </style>

    <style name="AppThemePink" parent="@style/AppTheme">
        <item name="colorPrimary">@color/pink500</item>
        <item name="colorPrimaryDark">@color/pink700</item>
        <item name="colorAccent">@color/pinkAccent</item>
    </style>

    <style name="AppThemePurple" parent="@style/AppTheme">
        <item name="colorPrimary">@color/purple500</item>
        <item name="colorPrimaryDark">@color/purple700</item>
        <item name="colorAccent">@color/purpleAccent</item>
    </style>

    <style name="AppThemeGreen" parent="@style/AppTheme">
        <item name="colorPrimary">@color/green500</item>
        <item name="colorPrimaryDark">@color/green700</item>
        <item name="colorAccent">@color/greenAccent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

</resources>
